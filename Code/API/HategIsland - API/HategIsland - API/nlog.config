<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="info"
      internalLogFile="internal-nlog-AspNetCore3.txt">

		<!-- enable asp.net core layout renderers -->
		<extensions>
				<add assembly="NLog.Web.AspNetCore"/>
		</extensions>

		<!-- the targets to write to -->
		<targets>
				<!-- File Target for all log messages with basic details -->
				<target xsi:type="File" name="basicMessage" fileName="logs\{basicMessages}.log"
								layout="${longdate} || ${uppercase:${level}} || ${logger} || ${message}" />

				<target xsi:type="File" name="detailMessage" fileName="logs\{detailedMessages}.log"
					layout="${longdate} || ${uppercase:${level}} || ${logger} || ${message} || ${exception:format=tostring}" />
			
		</targets>

		<!-- rules to map from logger name to target -->
		<rules>
				<!--All logs, including from Microsoft-->
				<logger name="*" minlevel="Trace" writeTo="basicMessage" />

				<logger name="warn" minlevel="Warn" writeTo="detailMessage" />

		</rules>
</nlog>